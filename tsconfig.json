{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node"],
    "baseUrl": "./app", // Set the base directory to the app folder
    "paths": {
      "assets/*": ["./app/assets/*"],
      "components": ["components/index"],
      "context": ["context/index"],
      "hooks": ["hooks/index"],
      "navigation": ["navigation/index"],
      "screens": ["screens/index"],
      "services": ["services/index"],
      "styles": ["styles/index"],
      "types/*": ["./app/types/index"],
      "utils": ["utils/index"]
    }
  },
  "include": ["app/**/*"], // Include app folder and subfolders
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"] // Exclude these files from compilation
}
